
<div>
  <h1>User info</h1>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.introduction %></h3>
</div>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %><br><%= @user.name %></td>
      <td><%= link_to book.title %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>