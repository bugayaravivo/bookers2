<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>
  <h3>Opinion</h3>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<% end %>

<span><%= link_to "Show", book_path(@book.id) %><%= "|" %><%= link_to "Back", books_path %></span>