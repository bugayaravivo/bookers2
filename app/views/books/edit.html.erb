<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>
  <h3>Opinion</h3>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<% end %>

<span><%= link_to "Show", book_path(@book.id) %><%= "|" %><%= link_to "Back", books_path %></span>